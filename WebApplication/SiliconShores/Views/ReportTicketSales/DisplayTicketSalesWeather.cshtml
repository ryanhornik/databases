@{
    ViewBag.Title = "DisplayTicketSalesWeather";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>DisplayTicketSalesWeather</h2>

<div class="row">
    <div class="col-md-6">
        <img src="/ReportTicketSales/GenerateChart?@ViewBag.Params" class="img-rounded"/>
    </div>
    <div class="col-md-6">
        <img src="/ReportTicketSales/GenerateTemperatureReport?@ViewBag.Params" class="img-rounded"/>
    </div>
</div>
@using (Html.BeginForm("DisplayTicketSalesWeather", "ReportTicketSales", FormMethod.Get))
{
    <div class="form-horizontal">

        <div class="form-group">
            <label for="id_start" class="control-label col-md-2">Start Date</label>
            <div class="col-md-10">
                <input name="startDate" id="id_start" type="date" class="form-control"/>
            </div>
        </div>

        <div class="form-group">
            <label for="id_end" class="control-label col-md-2">End Date</label>
            <div class="col-md-10">
                <input name="endDate" id="id_end" type="date" class="form-control"/>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Run Report" class="btn btn-default"/>
            </div>
        </div>

    </div>
}