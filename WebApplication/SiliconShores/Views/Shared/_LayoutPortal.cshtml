<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Employee Portal</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-2.1.3.min.js" type="text/javascript"></script>
    <script src="~/Scripts/portal.js" type="text/javascript"></script>
    <link href="~/Content/dashboard.css" rel="stylesheet"/>

</head>
<body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Silicon Shores", "Index", "Home", htmlAttributes: new { @class = "navbar-brand" })
                <form class="navbar-form navbar-left" method="GET">
                    <input name="genericSearch" type="text" class="form-control hidden" placeholder="Search..." id="id_omni_search" disabled />
                </form>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

    <div class="container-fluid" id="id_sidebar">
        <div class="row">
            <div class="col-sm-3 col-md-2 sidebar">
                <ul class="nav nav-sidebar">
                    <li id="id_dash">@Html.ActionLink("Dashboard", "Index", "Portal")</li>
                    <li id="id_report">@Html.ActionLink("Reports", "Index", "ReportTicketSales")</li>
                    <li id="id_box">@Html.ActionLink("Box Office", "Index", "Boxoffice")</li>
                </ul>
                <h4>Management Console</h4>
                <ul class="nav nav-sidebar">
                    <li class="dropdown" id="id_emp">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Employees
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Employees", "Index", "EmployeeAdmin")</li>
                            <li>@Html.ActionLink("Job Titles", "Index", "RoleAdmin")</li>
                        </ul>
                    </li>

                    <li class="dropdown" id="id_park">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Theme Park
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Theme Park", "Index", "ThemeParkAdmin")</li>
                            <li>@Html.ActionLink("Theme Areas", "Index", "ThemeAreaAdmin")</li>
                            <li>@Html.ActionLink("Weather Logs", "Index", "WeatherAdmin")</li>
                        </ul>
                    </li>

                    <li class="dropdown" id="id_rides">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Attractions
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Attractions", "Index", "AttractionAdmin")</li>
                            <li>@Html.ActionLink("Ride Reports", "Index", "RideReportAdmin")</li>
                            <li>@Html.ActionLink("Breakdowns", "Index", "BreakdownAdmin")</li>
                        </ul>
                    </li>


                    <li class="dropdown" id="id_hotel">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Hotels
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Hotels", "Index", "HotelAdmin")</li>
                            <li>@Html.ActionLink("Hotel Reservations", "Index", "HotelReservationAdmin")</li>
                            <li>@Html.ActionLink("Hotel Rooms", "Index", "HotelRoomAdmin")</li>
                            <li>@Html.ActionLink("Room Types", "Index", "RoomTypeAdmin")</li>
                        </ul>
                    </li>

                    <li class="dropdown" id="id_food">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Restaurants
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Restaurants", "Index", "RestaurantAdmin")</li>
                            <li>@Html.ActionLink("Restaurant Reports", "Index", "RestaurantReportAdmin")</li>
                            <li>@Html.ActionLink("Restaurant Categories", "Index", "FoodCategoryAdmin")</li>
                        </ul>
                    </li>

                    <li class="dropdown" id="id_ticket">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Tickets
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Ticket Sales", "Index", "TicketSaleAdmin")</li>
                            <li>@Html.ActionLink("Ticket Types", "Index", "TicketTypeAdmin")</li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <hr />
    <div class="panel panel-primary col-md-8 col-md-push-3" id="id_page_content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
