<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Employee Portal</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-2.1.3.min.js" type="text/javascript"></script>
    <link href="~/Content/dashboard.css" rel="stylesheet" />

</head>
<body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Project name</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#">Dashboard</a></li>
                    <li><a href="#">Settings</a></li>
                    <li><a href="#">Profile</a></li>
                    <li><a href="#">Help</a></li>
                </ul>
                <form class="navbar-form navbar-right" method="GET">
                    <input name="genericSearch" type="text" class="form-control" placeholder="Search...">
                </form>
            </div>
        </div>
    </nav>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-3 col-md-2 sidebar">
            <ul class="nav nav-sidebar">
                <li><a href="#">Overview <span class="sr-only">(current)</span></a></li>
                <li><a href="#">Reports</a></li>
                <li><a href="#">Analytics</a></li>
                <li><a href="#">Export</a></li>
            </ul>
            <h4>Management Console</h4>
            <ul class="nav nav-sidebar">
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        Employees
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Employees", "Index", "EmployeeAdmin")</li>
                        <li>@Html.ActionLink("Job Titles", "Index", "RoleAdmin")</li>
                    </ul>
                </li>

                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        Theme Park
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Theme Park", "Index", "ThemeParkAdmin")</li>
                        <li>@Html.ActionLink("Theme Areas", "Index", "ThemeAreaAdmin")</li>
                        <li>@Html.ActionLink("Weather Logs", "Index", "WeatherAdmin")</li>
                    </ul>
                </li>

                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        Attractions
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Attractions", "Index", "AttractionAdmin")</li>
                        <li>@Html.ActionLink("Ride Reports", "Index", "RideReportAdmin")</li>
                        <li>@Html.ActionLink("Breakdowns", "Index", "BreakdownAdmin")</li>
                    </ul>
                </li>


                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        Hotels
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Hotels", "Index", "HotelAdmin")</li>
                        <li>@Html.ActionLink("Hotel Reservations", "Index", "HotelReservationAdmin")</li>
                        <li>@Html.ActionLink("Hotel Rooms", "Index", "HotelRoomAdmin")</li>
                        <li>@Html.ActionLink("Room Types", "Index", "RoomTypeAdmin")</li>
                    </ul>
                </li>

                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        Restaurants
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Restaurants", "Index", "RestaurantAdmin")</li>
                        <li>@Html.ActionLink("Restaurant Reports", "Index", "RestaurantReportAdmin")</li>
                        <li>@Html.ActionLink("Restaurant Categories", "Index", "FoodCategoryAdmin")</li>
                    </ul>
                </li>

                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        Tickets
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Ticket Sales", "Index", "TicketSaleAdmin")</li>
                        <li>@Html.ActionLink("Ticket Types", "Index", "TicketTypeAdmin")</li>
                    </ul>
                </li>
            </ul>
        </div>

        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">

            <div class="row placeholders">
                <div class="col-xs-6 col-sm-3 placeholder">
                    <img src="~/Content/Images/Home/map.jpg" class="img-circle" alt="Generic placeholder thumbnail" height="140" width="140"/>
                    <h4>Label</h4>
                    <span class="text-muted">Something else</span>
                </div>
                <div class="col-xs-6 col-sm-3 placeholder">
                    <img src="~/Content/Images/Home/rollercoaster pic.png" class="img-circle" alt="Generic placeholder thumbnail" height="140" width="140"/>
                    <h4>Label</h4>
                    <span class="text-muted">Something else</span>
                </div>
                <div class="col-xs-6 col-sm-3 placeholder">
                    <img src="~/Content/Images/Home/tickets.png" class="img-circle" alt="Generic placeholder thumbnail" height="140" width="140"/>
                    <h4>Label</h4>
                    <span class="text-muted">Something else</span>
                </div>
                <div class="col-xs-6 col-sm-3 placeholder">
                    <img src="~/Content/Images/Home/plan vacation.jpg" class="img-circle" alt="Generic placeholder thumbnail" height="140" width="140"/>
                    <h4>Label</h4>
                    <span class="text-muted">Something else</span>
                </div>
            </div>
        </div>
    </div>
</div>
    <div class="panel panel-primary col-md-8 col-md-push-3">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
