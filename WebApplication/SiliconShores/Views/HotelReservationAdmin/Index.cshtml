@model IEnumerable<SiliconShores.Models.hotel_reservations>

@{
    ViewBag.Title = "Reservations";
    Layout = "~/Views/Shared/_LayoutPortal.cshtml";
}

<h2>Reservations</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.hotel_rooms.hotel.hotel_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.room_number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.reservation_checkin_date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.reservation_checkout_date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.total_reservation_cost)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.hotel_rooms.hotel.hotel_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.room_number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.reservation_checkin_date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.reservation_checkout_date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.total_reservation_cost)
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new {id = item.reservation_id}) |
            @Html.ActionLink("Details", "Details", new {id = item.reservation_id}) |
            @Html.ActionLink("Delete", "Delete", new {id = item.reservation_id})
        </td>
    </tr>
}

</table>
<script>
    $(document).ready(function () {
        setActiveLink("#id_hotel");
        enableOmniSearch();
    });
</script>
