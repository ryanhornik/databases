@model SiliconShores.Models.theme_park
@{
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
    ViewBag.Title = "Home";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">

        <div class="item active">
            <img class="img-responsive" src="~/Content/Images/Home/slide1.jpg"  />
            <div class="container">
                <div class="carousel-caption">
                    <h1>@Html.DisplayFor(model => model.theme_park_name)</h1>
                    <p>A place of Wonder</p>
                </div>
            </div>
        </div>

        <div class="item">
            <img class="img-responsive" src="~/Content/Images/Home/slide2.jpg"  />
            <div class="container">
                <div class="carousel-caption">
                    <h1>Crazy Rides</h1>
                    <p>A stomach churning adrenaline rush</p>
                    
                </div>
            </div>
        </div>

        <div class="item ">
            <img class="img-responsive" src="~/Content/Images/Home/slide3.jpg"  />
            <div class="container">
                <div class="carousel-caption">
                    <h1>Plan Your Trip Today</h1>
                </div>
            </div>
        </div>

    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


<div class="container marketing">
    <div class="row">
        <div class="col-lg-4">
           <center> <img src="~/Content/Images/Home/tickets.png" alt="Sample Image" width="140" height="140" class="img-circle" /></center>
            <h2 class="text-center">Tickets</h2>
            <p class="text-center">You can buy tickets on our state-of-the-art website using our patented CreditFree&reg; system that allows you to make purchases without even entering a credit card.</p>
            <p class="text-center">
                <a class="btn btn-success" role="button" href="/Tickets/">Buy Tickets &raquo;</a>
            </p>
        </div>

        <div class="col-lg-4">
           <center> <img src="~/Content/Images/Home/plan vacation.gif" alt="Sample Image" width="140" height="140" class="img-circle" /></center>
            <h2 class="text-center">Plan a Vacation</h2>
            <p class="text-center">Using the same state-of-the-art world changing super awesome patented CreditFree&reg; system that you can use to buy tickets you can also book your stay at any of our fine hotels.</p>
            <p class="text-center">
                <a class="btn btn-success" role="button" href="/PlanVacation/">Book Now &raquo;</a>
            </p>
        </div>

        <div class="col-lg-4">
            <center><img src="~/Content/Images/Home/map.jpg" alt="Sample Image" width="140" height="140" class="img-circle" /></center>
            <h2 class="text-center">Park Map</h2>
            <p class="text-center">Not sure what to do at our park, or even where our park is located? Never fear the park map is here! Click below to explore our park and get detailed directions from where your sitting.</p>
            <p class="text-center">
                <a class="btn btn-success" role="button" href="/Maps/">View Map &raquo;</a>
            </p>
        </div>
    </div>
</div>