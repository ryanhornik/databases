@model IEnumerable<SiliconShores.Models.ticket_types>

@{
    ViewBag.Title = "Ticket Types";
    Layout = "~/Views/Shared/_LayoutPortal.cshtml";
}

<h2>Ticket Types</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ticket_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ticket_restrictions)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ticket_price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ticket_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ticket_restrictions)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ticket_price)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ticket_type_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.ticket_type_id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ticket_type_id })
        </td>
    </tr>
}

</table>

<script>
    $(document).ready(function () {
        setActiveLink("#id_ticket");
    });
</script>
