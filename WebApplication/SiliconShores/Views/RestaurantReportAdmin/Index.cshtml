        </th>
        <th>
            @Html.DisplayNameFor(model => model.restaurant.restaurant_name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.gross_income)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.patrons_served)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.restaurant.restaurant_name)
