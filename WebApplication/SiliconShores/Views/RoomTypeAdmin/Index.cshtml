@model IEnumerable<SiliconShores.Models.room_types>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPortal.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.room_types_string)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.room_types_string)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {id = item.room_type_id}) |
                @Html.ActionLink("Details", "Details", new {id = item.room_type_id}) |
                @Html.ActionLink("Delete", "Delete", new {id = item.room_type_id})
            </td>
        </tr>
    }

</table>
<script>
    $(document).ready(function () {
        setActiveLink("#id_hotel");
    });
</script>
