@{
    ViewBag.Title = "TicketPurchase";
    Layout = "~/Views/Shared/_Layout.cshtml";

    int numChildren=1, numAdult=0, numSenior=0, numMilitary=0;    
}

<h2>Ticket Purchase</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    //min for no negative numbers, and max just to set a limit;
    <div class="form-group">
        <lable>Children Tickets:</lable>
        <input name="numChildren" type="number" min="0" max="10" />
    </div>

    <div class=" form-group">
        <lable>Adult Tickets:   </lable>
        <input name="numAdult" type="number" min="0" max="10" />
    </div>

    <div class="form-group">
        <lable>Senior Tickets:  </lable>
        <input name="numSenior" type="number" min="0" max="10" />
    </div>

    <div class="form-group">
        <lable>Military Tickets:    </lable>
        <input name="numMilitary" type="number" min="0" max="10" />
    </div>

    <div class="form-group">
        <div class="col-md col-md-10">
            <input type="button" value="Purchase" class="btn btn-default" onclick="@Url.Action("ProcessTickets",
                                                                                               "TicketsController",
                                                                                               new {ChildrenTickets = numChildren,
                                                                                                    AdultTickets = numAdult,
                                                                                                    SeniorTickets = numSenior,
                                                                                                    MilitaryTickets = numMilitary})" 
            
            />
        </div>
    </div>
}