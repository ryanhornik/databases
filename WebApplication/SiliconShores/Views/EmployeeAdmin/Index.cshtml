@model IEnumerable<SiliconShores.Models.employee>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPortal.cshtml";
}

<h2>Employees</h2>

<p>
    @Html.ActionLink("Hire new employee", "Register", "Account")
</p>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.full_time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.payrate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.hired_date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.date_left)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.rehireable)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.first_name)

                @Html.DisplayFor(modelItem => item.middle_initial)

                @Html.DisplayFor(modelItem => item.last_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.full_time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.payrate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.hired_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.date_left)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.rehireable)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.employee_id }) |
                @Html.ActionLink("Details", "Details", new { id = item.employee_id })
            </td>
        </tr>
    }

</table>


<script>
    $(document).ready(function () {
        setActiveLink("#id_emp");
        enableOmniSearch();
    });
</script>