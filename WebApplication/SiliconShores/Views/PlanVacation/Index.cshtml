@using SiliconShores.Models
@model SiliconShores.Models.VacationPlanViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Plan Your Perfect Day</h2>
<hr />
@using (Html.BeginForm("CheckNow", "PlanVacation", FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.ArrivalDate, new { @class = "col-md-2 control-label"})
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.ArrivalDate, new { @class = "form-control" })
            @Html.Label("Format: MM/DD/YYYY")
        </div>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.Nights, new { @class = "col-md-2 control-label"})
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Nights, new { @class = "form-control" })
        </div>
    </div>

    foreach (KeyValuePair<ticket_types, int> kvp in ViewBag.TicketTypes)
     {
        var inputID = "id_" + kvp.Key.ticket_name;
         <div class="form-group">
             <label for=inputID class="col-md-2 control-label">@kvp.Key.ticket_name</label>
             <div class="col-md-10">
                <input name=@(ViewBag.TicketTypes[kvp.Key]) type="number" id=inputID value="@kvp.Value"/>
             </div>
         </div>
     }

    <div class="form-group">
        @Html.LabelFor(m => m.RoomType, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownList("RoomTypes", null,htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Room, new {@class = "col-md-2 control-label"})
        <div class="col-md-10">
            @Html.DropDownList("Room", null, htmlAttributes: new {@class = "form-control"})
        </div>
    </div>

    <input type="submit" value="Check Now" class="btn btn-success" />
}

